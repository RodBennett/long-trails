  id='no-input-model'
  tabindex='-1'
  aria-labelledby='No input alert'
  aria-hidden='true'
>
  <div class='modal-dialog modal-sm modal-dialog-centered'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='no-input-title'></h5>
        <button
          type='button'
          class='close'
          data-dismiss='modal'
          aria-label='Close'
        >
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 id="share-camp"></h5>
        <a id="share-email" href="" role="button" class="btn btn-secondary" style="display:flex; justify-content:center; font-size: 20px" title="Email share">Send Email</a>
        <p></p>
        <a id="share-facebook" href="" target="_blank" role="button" class="btn btn-secondary" style="display:flex; justify-content:center; font-size: 20px" title="Share on Facebook share">Share on Facebook</a>
